<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="544.0" prefWidth="900.0" style="-fx-background-color: #4CB5E2;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="englishlearningapp.englearning.Controller.AddWordController">
   <children>
      <ImageView fitHeight="577.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../src/image/FlatBack.png" />
         </image></ImageView>
      <HBox layoutY="14.0" prefHeight="500.0" prefWidth="900.0">
         <children>
            <VBox prefHeight="400.0" prefWidth="260.0">
               <children>
                  <Label alignment="TOP_CENTER" prefHeight="214.0" prefWidth="260.0" text="Word Name:">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label alignment="TOP_CENTER" prefHeight="202.0" prefWidth="260.0" text="Word Pronunciation:">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label alignment="TOP_CENTER" prefHeight="229.0" prefWidth="260.0" text="Word Definition: ">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox prefHeight="600.0" prefWidth="564.0">
               <children>
                  <TextArea fx:id="nameArea" prefHeight="200.0" prefWidth="200.0" promptText="Type name of word that you want to add..." />
                  <TextArea fx:id="pronunciationArea" prefHeight="200.0" prefWidth="200.0" promptText="Type pronunciation of word that you want to add, eg: &quot;a&quot; has pronunciation: /ei:/..." />
                  <TextArea fx:id="definitionArea" prefHeight="200.0" prefWidth="200.0" promptText="Type definition of word that you want to add..." />
               </children>
            </VBox>
         </children>
      </HBox>
      <Button layoutX="680.0" layoutY="520.0" mnemonicParsing="false" onAction="#onAddWord" prefHeight="35.0" prefWidth="131.0" text="Add">
         <font>
            <Font name="Arial Bold" size="13.0" />
         </font></Button>
      <Button layoutX="300.0" layoutY="520.0" mnemonicParsing="false" onAction="#onExit" prefHeight="35.0" prefWidth="131.0" text="Exit">
         <font>
            <Font name="Arial Bold" size="13.0" />
         </font></Button>
   </children>
</AnchorPane>
